<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#CCC"
    tools:context=".activity.listaestudiantesactivity">


    <Button
        android:id="@+id/btnasig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:onClick="asignatura"
        android:text="Asignatura" />

    <Button
        android:id="@+id/bntagusu"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/btnasig"
        android:onClick="agregarUsuario"
        android:text="Agregar Usuario" />

    <TextView
        android:id="@+id/tvusuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Usuarios"
        android:textAlignment="center"
        android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_below="@+id/bntagusu"
        android:layout_marginTop="10dp" />

</RelativeLayout>